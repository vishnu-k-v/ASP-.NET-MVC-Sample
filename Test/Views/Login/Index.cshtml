
@{
    ViewBag.Title = "Index";
}
@model Test.Models.Login
@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    <div class="login">
        <div class="heaading text-center">
            <img src="~/Content/img/logo.png" width="94" height="79" alt="Expence Manager">
            <h2>Accounts Manager</h2>
        </div>
        <svg width="100%" height="77">
            <circle stroke="black" stroke-width="0" fill="#326ffb" cx="50%" r="454" cy="-403"></circle>
        </svg>
        <div class="colum">
            <div class="field-container">
                <i><img src="~/Content/img/icon-user.png" width="26" height="32" alt="user"> </i>
                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "userName", type = "text" })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "error-msg" })
                @*<input type="text" class="form-control" placeholder="User ID">
                <div class="error-msg" style="display: block">Please enter username</div>*@
            </div>
            <div class="field-container">
                <i><img src="~/Content/img/icon-password.png" width="20" height="28" alt="user"> </i>
                @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Password", type = "Password" })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "error-msg" })
                @*<input type="password" class="form-control" placeholder="Password">*@
            </div>
            <div class="btn-box">
                <input type="submit" class="btn" value="Login">
            </div>
            <div class="text-center">
                <a href="#" class="forgot">Forgot Password?</a>
            </div>
        </div>
    </div>
    }


    <div class="new-user text-center"><a href="@Url.Action("Index", "Home")">New User?</a> </div>

